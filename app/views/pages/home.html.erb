<div class="banner text-center">
  <div class="text-white pt-5">
    <h1>Gaming ZoneğŸ®</h1>
    <h5>Get gaming today</h5>
    <div class="container">
      <div class="center">
        <%= link_to "Game away", listings_path(@listing), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
</div>
<div class="container my-3">
  <h2>Lastest Listings</h2>
  <div class="row gy-4">
    <% @listings.each do |listing| %>
      <div class="col-3">
        <div class="card">
          <% if listing.photos.any? %>
            <%= cl_image_tag listing.photos.first.key, class: "card-img-top" %>
          <% else %>
            <img src="https://res.cloudinary.com/dq9hvwxj8/image/upload/v1669199190/hhth1iyyoguqnzs7hg9e.jpg" alt="Placeholder">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <% if false %>
            <%# if listing.availability %>
              <%# link_to "More info", listing_path(listing), class: "btn btn-primary" %>
            <% else %>
              <%# <p class="text-align-center" style="color: white; background: red">Currently unavailable.</p> %>
            <% end %>
              <%= link_to "More info", listing_path(listing), class: "btn btn-primary" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
